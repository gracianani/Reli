@model ReliDemo.ViewModels.StationRoomTemperatureViewModel

@{
    ViewBag.Title = "室温统计";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
<div class="span8">
<p>
    @Html.ActionLink("返回热力站列表", "Paged", new object { }, new { @class = "btn btn-primary"})
</p>
</div>
</div>
<div class="row-fluid clearfix stationTitle">
    <h1 class="span6">@Model.StationName
	@if ( string.IsNullOrEmpty( Model.数据来源 ) ) {
		<span class="label label-info"><i class="icon-pencil"></i> 人工抄表站</span> 
	} else {
		<span class="label label-important"><i class="icon-eye-open"></i> @Model.数据来源</span>
	}</h1>
     <div class="span6" onDesktop="span6" onTablet="span12 noMarginLeft">@Html.Partial("_TopMenu")</div>
</div>


<div class="row-fluid">
    <div class="scrollableTableContainer">
	    <table class="table  table-bordered table-hover  table-condensed table-clickhighlight datatable" style="background:white">
			    <tr>
                    <td rowspan="3">测温日期</td>
                    <td rowspan="3">热力站名称</td>
                    <td colspan="12">各温度段房间数</td>
                    <td rowspan="3">合计</td>
                </tr>
                <tr>
                    <td colspan="2">16°以下</td>
                    <td colspan="2">16°-18°</td>
                    <td colspan="2">18°-20°</td>
                    <td colspan="2">20°-22°</td>
                    <td colspan="2">22°-24°</td>
                    <td colspan="2">24°以上</td>
                </tr>
                <tr> 
                    <td>节能</td>
                    <td>非节能</td>
                    <td>节能</td>
                    <td>非节能</td>
                    <td>节能</td>
                    <td>非节能</td>
                    <td>节能</td>
                    <td>非节能</td>
                    <td>节能</td>
                    <td>非节能</td>
                    <td>节能</td>
                    <td>非节能</td>
			    </tr>
		    <tbody>
            @foreach (var stat in Model.Stats)
            {
                <tr>
                    <td> @(stat.测温日期.ToString("MM-dd-yyyy")) </td>
                    <td> @stat.热力站名称</td>
                    <td> @stat.节能16以下</td>
                    <td> @stat.非节能16以下</td>
                    <td> @stat.节能16至18</td>
                    <td> @stat.非节能16至18</td>
                    <td> @stat.节能18至20</td>
                    <td> @stat.非节能18至20</td>
                    <td> @stat.节能20至22</td>
                    <td> @stat.非节能20至22</td>
                    <td> @stat.节能22至24</td>
                    <td> @stat.非节能22至24</td>
                    <td> @stat.节能24以上</td>
                    <td> @stat.非节能24以上</td>
                    <td> @stat.</td>
                </tr>
            }
		    </tbody>
	    </table>
    </div>
</div>
